<?xml version="1.0" encoding="utf-8"?>
<install 
    version="1.6" 
    type="plugin" 
    group="system"
    method="upgrade"
    >
    <name>System - Require Login</name>
    <author>Emerson Rocha Luiz</author>
    <creationDate>2011-10-06</creationDate>
    <copyright>opyright (C) 2005 - 2011 Webdesign Assessoria em Tecnologia da Informacao.</copyright>
    <license>GNU General Public License version 3. See license.txt</license>
    <authorEmail>emerson@webdesign.eng.br</authorEmail>
    <authorUrl>http://fititnt.org</authorUrl>
    <version>0.1alpha</version>
    <description>PLG_REQUIRELOGIN_DESCRIPTION</description>
    <files>
        <filename plugin="requirelogin">requirelogin.php</filename>
        <filename>license.txt</filename>
        <filename>readme.txt</filename>
        <filename>requirelogin.xml</filename>
        <filename>index.html</filename>
        <folder>language</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_requirelogin.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_requirelogin.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    name="message" 
                    type="text" 
                    default="" 
                    label="PLG_REQUIRELOGIN_MESSAGE_LABEL" 
                    description="PLG_REQUIRELOGIN_MESSAGE_DESC">
                </field>
            </fieldset>
            <fieldset name="basic">
                <field 
                    name="option-include" 
                    type="text" 
                    default="com_content,com_weblink" 
                    label="PLG_REQUIRELOGIN_OPTION_INCLUDE_LABEL" 
                    description="PLG_REQUIRELOGIN_OPTION_INCLUDE_DESC">
                </field>
            </fieldset> 
        </fields>
    </config>
</install>
